<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="@drawable/map_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="365dp"
        android:layout_height="273dp"
        android:layout_marginTop="124dp"
        android:foreground="@drawable/rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_enter"
        style="@style/Theme.TravelingTogether"
        android:layout_width="115dp"
        android:layout_height="48dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#085CB9"
        android:text="@string/button_enter"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textIsSelectable="false"
        app:cornerRadius="45px"
        app:icon="@drawable/login_ico"
        app:iconGravity="end"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintVertical_bias="0.02" />

    <Button
        android:id="@+id/button_register"
        style="@style/Theme.TravelingTogether"
        android:layout_width="125dp"
        android:layout_height="48dp"
        android:layout_marginEnd="79dp"
        android:autoText="false"
        android:backgroundTint="#FFFFFF"
        android:backgroundTintMode="add"
        android:fontFamily="sans-serif-medium"
        android:foregroundTintMode="src_over"
        android:shadowColor="#000000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:text="@string/button_register"
        android:textColor="@color/black"
        app:cornerRadius="45px"
        app:layout_constraintBottom_toBottomOf="@+id/button_enter"
        app:layout_constraintEnd_toEndOf="@+id/view" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="254dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_white_rounded"
        android:backgroundTintMode="screen"
        android:ems="10"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:paddingLeft="20px"
        android:textColor="@color/black"
        android:textColorHint="@color/origin"
        app:layout_constraintEnd_toEndOf="@+id/emailEditText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/emailEditText"
        app:layout_constraintTop_toBottomOf="@+id/emailEditText" />

    <EditText
        android:id="@+id/emailEditText"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="254dp"
        android:layout_height="48dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/bg_white_rounded"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="20px"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textColorHint="@color/origin"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="184dp"
        android:layout_height="59dp"
        android:fontFamily="sans-serif"
        android:text="Вход"
        android:textColor="@color/origin"
        android:textSize="48sp"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="7dp" />

</androidx.constraintlayout.widget.ConstraintLayout>